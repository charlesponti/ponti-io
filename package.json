{
  "name": "ponti-io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "astro build",
    "commit": "cz",
    "dev": "astro dev",
    "format": "npx biome lint src components --apply --no-errors-on-unmatched && npx biome format --write src components",
    "lint": "run-p run-lint run-stylelint",
    "prepare": "lefthook install",
    "preview": "astro preview",
    "refresh-deps": "rm package-lock.json && rm -rf node_modules && npm install",
    "run-lint": "npx biome lint src components",
    "run-stylelint": "stylelint --cache --fix --ignore-path .gitignore src/**/*.css",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --incremental false",
    "validate": "run-p lint test"
  },
  "dependencies": {
    "@astrojs/react": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.13.4",
    "@tanstack/react-query-devtools": "^5.13.5",
    "astro": "^5.0.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.7",
    "lucide-react": "^0.414.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260206.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.0.7",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "cssnano": "^6.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.5.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "postcss": "^8.4.32",
    "stylelint": "^16.3.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwind-merge": "^2.6.0",
    "typescript": "^5.2.2",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  }
}

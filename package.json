{
	"name": "ponti-io",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"build:sitemap": "next-sitemap --config next-sitemap.config.js",
		"commit": "cz",
		"deploy": "npm run pages:build && wrangler pages deploy .vercel/output/static --project-name theponti",
		"dev": "next dev --turbo",
		"format": "npx biome lint src --apply && npx biome format --write src",
		"lint": "run-p run-tsc run-lint run-stylelint",
		"pages:build": "npx @cloudflare/next-on-pages",
		"prepare": "husky install",
		"preview": "npm run pages:build && wrangler pages dev .vercel/output/static --project-name theponti",
		"preview:test": "start-server-and-test preview http://localhost:4173",
		"preview:next": "npx next dev -p 4173",
		"refresh-deps": "rm package-lock.json && rm -rf node_modules && npm install",
		"run-lint": "npx biome lint app && npx biome lint components",
		"run-stylelint": "stylelint --cache --fix --ignore-path .gitignore app/**/*.css",
		"run-tsc": "tsc",
		"start": "next start",
		"test": "vitest --run",
		"test:coverage": "open coverage/jest/lcov-report/index.html ",
		"test:e2e:ci": "next build && npm run preview:test 'npx playwright test'",
		"test:e2e": "npm run preview:test 'npx playwright test'",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit --incremental false",
		"validate": "run-p lint test test:e2e:ci"
	},
	"dependencies": {
		"@tailwindcss/forms": "^0.5.7",
		"@tanstack/react-query": "^5.13.4",
		"@tanstack/react-query-devtools": "^5.13.5",
		"@tanstack/react-query-next-experimental": "^5.13.4",
		"@vis.gl/react-google-maps": "^0.4.1",
		"axios": "^1.6.2",
		"clsx": "^2.1.0",
		"daisyui": "^4.5.0",
		"lucide-react": "^0.367.0",
		"next": "^14.1.4",
		"react": "^18",
		"react-countup": "^6.5.0",
		"react-dom": "^18",
		"react-icons": "^4.12.0",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@cloudflare/next-on-pages": "^1.9.0",
		"@cloudflare/workers-types": "^4.20240222.0",
		"@commitlint/cli": "^18.4.4",
		"@commitlint/config-conventional": "^18.4.4",
		"@playwright/test": "^1.40.1",
		"@testing-library/jest-dom": "^6.1.6",
		"@testing-library/react": "^14.1.2",
		"@types/css-mediaquery": "^0.1.4",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@types/styled-components": "^5.1.34",
		"@types/xml2js": "^0.4.14",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitest/coverage-v8": "^1.1.2",
		"autoprefixer": "^10.4.16",
		"c8": "^8.0.1",
		"commitizen": "^4.3.0",
		"css-mediaquery": "^0.1.2",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^8.0.3",
		"jsdom": "^23.0.1",
		"lint-staged": "^15.2.0",
		"msw": "^2.0.11",
		"next-router-mock": "^0.9.11",
		"next-sitemap": "^4.2.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.32",
		"rollup-plugin-analyzer": "^4.0.0",
		"start-server-and-test": "^2.0.3",
		"styled-components": "^6.1.2",
		"stylelint": "^15.10.2",
		"stylelint-config-recommended": "^13.0.0",
		"tailwind-merge": "^2.2.0",
		"tailwindcss": "^3.3.6",
		"typescript": "^5.2.2",
		"vite": "^5.0.10",
		"vite-plugin-pwa": "^0.17.4",
		"vite-tsconfig-paths": "^4.2.2",
		"vitest": "^1.1.0",
		"whatwg-fetch": "^3.6.20",
		"wrangler": "^3.30.1"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": ["biome lint --apply", "biome format --write"],
		"**/*.{json,css,scss,md}": ["biome lint --apply", "biome format --write"]
	}
}

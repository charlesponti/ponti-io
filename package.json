{
	"name": "ponti-io",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"build:sitemap": "next-sitemap --config next-sitemap.config.js",
		"commit": "cz",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit push",
		"db:populate": "tsx _data/populate.ts",
		"db:populate-tfl": "tsx db/populate-tfl.ts",
		"db:studio": "drizzle-kit studio",
		"dev": "next dev --turbo",
		"format": "npx biome lint src --apply --no-errors-on-unmatched && npx biome format --write src",
		"lint": "run-p run-lint run-stylelint",
		"prepare": "lefthook install",
		"preview": "npm run build && npm start",
		"preview:test": "start-server-and-test preview http://localhost:4173",
		"preview:next": "npx next dev -p 4173",
		"refresh-deps": "rm package-lock.json && rm -rf node_modules && npm install",
		"run-lint": "npx biome lint app && npx biome lint components",
		"run-stylelint": "stylelint --cache --fix --ignore-path .gitignore app/**/*.css",
		"start": "next start",
		"test": "vitest --run",
		"test:coverage": "open coverage/jest/lcov-report/index.html ",
		"test:e2e:ci": "next build && npm run preview:test 'npx playwright test'",
		"test:e2e": "npm run preview:test 'npx playwright test'",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit --incremental false",
		"validate": "run-p lint test test:e2e:ci"
	},
	"dependencies": {
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-slot": "^1.1.2",
		"@tailwindcss/forms": "^0.5.7",
		"@tanstack/react-query": "^5.13.4",
		"@tanstack/react-query-devtools": "^5.13.5",
		"@tanstack/react-query-next-experimental": "^5.13.4",
		"@testing-library/user-event": "^14.6.1",
		"@types/pg": "^8.15.4",
		"@vis.gl/react-google-maps": "^0.4.1",
		"axios": "^1.6.2",
		"class-variance-authority": "^0.7.1",
		"classnames": "^2.5.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"csv-parse": "^5.6.0",
		"csv-parser": "^3.2.0",
		"daisyui": "^4.5.0",
		"drizzle-orm": "^0.44.2",
		"framer-motion": "^12.4.7",
		"lucide-react": "^0.414.0",
		"next": "^15.3.3",
		"pg": "^8.16.0",
		"postgres": "^3.4.7",
		"react": "^19.1.0",
		"react-countup": "^6.5.0",
		"react-dom": "^19.1.0",
		"react-icons": "^4.12.0",
		"recharts": "^2.15.1",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@commitlint/cli": "^18.4.4",
		"@commitlint/config-conventional": "^18.4.4",
		"@evilmartians/lefthook": "^1.11.13",
		"@playwright/test": "^1.40.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/css-mediaquery": "^0.1.4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/styled-components": "^5.1.34",
		"@types/xml2js": "^0.4.14",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitest/coverage-v8": "^3.0.7",
		"autoprefixer": "^10.4.16",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"c8": "^8.0.1",
		"commitizen": "^4.3.0",
		"css-mediaquery": "^0.1.2",
		"cssnano": "^6.1.2",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.1",
		"eslint-plugin-react-compiler": "^19.1.0-rc.2",
		"jsdom": "^24.0.0",
		"lint-staged": "^15.2.0",
		"msw": "^2.0.11",
		"next-router-mock": "^0.9.11",
		"next-sitemap": "^4.2.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.32",
		"rollup-plugin-analyzer": "^4.0.0",
		"start-server-and-test": "^2.0.3",
		"styled-components": "^6.1.2",
		"stylelint": "^16.3.1",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-standard": "^36.0.0",
		"tailwind-merge": "^2.6.0",
		"tailwindcss": "^3.3.6",
		"tsx": "^4.20.3",
		"typescript": "^5.2.2",
		"vite": "^5.0.10",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.0.7",
		"whatwg-fetch": "^3.6.20"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"biome lint --apply --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched"
		]
	}
}

---
import Clients from "../../components/landing/clients";
import Contact from "../../components/landing/contact";
import Hero from "../../components/landing/hero";
import Services from "../../components/landing/services";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { useI18n } from "../../lib/i18n";

const { messages } = useI18n();
const currentYear = new Date().getFullYear();
---

<BaseLayout>
	{/* Hero - Direct positioning */}
	<Hero client:load messages={messages} />

	{/* Services */}
	<Services client:load messages={messages} />
	
	{/* Clients */}
	<Clients client:load messages={messages} />
	
	{/* Contact - Terminal aesthetic with copy-to-clipboard */}
	<Contact client:visible messages={messages} />
	
	{/* Footer */}
	<footer class="py-12 md:py-16 text-center">
		<div class="w-full max-w-2xl mx-auto px-6 md:px-12">
		<div class="text-xs text-muted opacity-50">
				Â© {currentYear} Ponti Studios
			</div>
		</div>
	</footer>
</BaseLayout>

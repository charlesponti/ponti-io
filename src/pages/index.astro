---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../../components/landing/hero";
import Services from "../../components/landing/services";
import Clients from "../../components/landing/clients";
import Contact from "../../components/landing/contact";
import { loadMessages } from "../lib/messages";

const messages = loadMessages("en");
const currentYear = new Date().getFullYear();
---

<BaseLayout locale="en" navLabels={messages.Navigation}>
	{/* Hero - Asymmetric layout with positioning statement */}
	<Hero messages={messages.Hero} />
	
	{/* Services - Dot-leader format, no borders */}
	<Services messages={messages.Services} />
	
	{/* Clients - Typography-only trust signals */}
	<Clients />
	
	{/* Contact - Terminal aesthetic with copy-to-clipboard */}
	<Contact client:visible />
	
	{/* Footer - Minimal, Shibui (subtle) */}
	<footer class="py-12 md:py-16 text-center">
		<div class="w-full max-w-2xl mx-auto px-6 md:px-12">
			<div class="text-[var(--font-size-micro)] text-[var(--color-sumi-muted)] opacity-50">
				Â© {currentYear} Ponti Studios
			</div>
		</div>
	</footer>
</BaseLayout>
